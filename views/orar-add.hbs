<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/orar">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">New orar</li>
  </ol>
</nav>

{{#if alert}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}

{{#if eroare}}
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{eroare}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
{{/if}}

<form class="row g-3 needs-validation" method="POST" action="/orar-add" novalidate>
  {{> orar-form}}
</form>