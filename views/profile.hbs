
<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">


            <!--col-md-4 mb-3-->
            <div class="unu">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            {{#if user.poza}}
                                <img src="{{user.poza}}" alt="pozaprofil" class="rounded-circle" width="150">
                            {{else}}
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="pozaprofil" class="rounded-circle" width="150">
                            {{/if}}
                            <div class="mt-3">
                                <h4>{{user.name}} {{user.prenume}}</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nume</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.name}}
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Prenume</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.prenume}}
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{user.email}}
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                {{#if user.telefon}}
                                    {{user.telefon}}
                                {{else}}
                                    Numar de telefon
                                {{/if}}
                            </div>
                        </div>
                        <hr>
                        {{#unless user.admin}}
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Grupa</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                Grupa
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Facultate</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                Facultate
                            </div>
                        </div>
                        <hr>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<form action = "/profilePicture" method="POST" enctype="multipart/form-data">
    <h3>Upload profile photo</h3>
    <input type="file" name="poza" accept="image/">
    <input type="submit">
</form>

<form action = "/profilePhone" method="POST" enctype="multipart/form-data">
    <h3>Schimba numar de telefon</h3>
    <input type="text" maxlength="10" name="telefon">
    <input type="submit">
</form>




<a class="logout-button" href="/auth/logout">Logout</a>

