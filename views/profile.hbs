<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">

            <div class="unu">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            {{#if user.poza}}
                                <div class="circle-avatar" style="background-image:url({{user.poza}})"></div>
                            {{else}}
                                <img src="/public/images/standard-profile-picture.png" alt="pozaprofil"
                                class="rounded-circle" width="150">
                            {{/if}}
                            <div class="mt-3">
                                <h4>{{user.name}} {{user.prenume}}</h4>
                                {{#unless user.admin}}<h6>Student</h6>
                                {{else}}<h6>Admin</h6>{{/unless}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0 text-secondary">Nume</h6>
                            </div>
                            <div class="col-sm-9">
                                {{user.name}}
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3 text-secondary">
                                <h6 class="mb-0">Prenume</h6>
                            </div>
                            <div class="col-sm-9">
                                {{user.prenume}}
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3 text-secondary">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9">
                                {{user.email}}
                            </div>
                        </div>
                        <hr>

                        <div class="row">
                            <div class="col-sm-3 text-secondary">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9">
                                {{#if user.telefon}}
                                    {{user.telefon}}
                                {{else}}
                                    Numar de telefon
                                {{/if}}
                            </div>
                        </div>

                        <hr>

                        {{#unless user.admin}}
                            <div class="row">
                                <div class="col-sm-3 text-secondary">
                                    <h6 class="mb-0">Grupa</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{user.grupa}}
                                </div>
                            </div>

                            <hr>

                            <div class="row">
                                <div class="col-sm-3 text-secondary">
                                    <h6 class="mb-0">Facultate</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{user.facultate}}
                                </div>
                            </div>
                        {{/unless}}

                    </div>
                </div>
            </div>

            <div class="col-md-11 profile-buttons" style="text-align: right;">
                {{#if user.admin}}
                    <a class="btn-lg add-admin-buton" href="/admini">Administratori</a>
                {{else}}
                    <a class="btn-lg add-admin-buton" href="/student-admini">Administratori</a>
                {{/if}}

                <a class="btn-lg buton-edit-profile" href="/profileEdit/{{user.email}}">Edit Profile</a>

                <a class="btn-lg logout-button" href="/auth/logout">Logout</a>
            </div>

        </div>
    </div>
</div>