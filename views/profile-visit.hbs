<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            {{#each rows}}
                <div class="unu">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                {{#if this.poza}}
                                    <div class="circle-avatar" style="background-image:url(/upload/{{this.poza}})"></div>
                                {{else}}
                                    <img src="/public/images/standard-profile-picture.png" alt="pozaprofil"
                                    class="rounded-circle" width="150">
                                {{/if}}
                                <div class="mt-3">
                                    <h4>{{this.name}} {{this.prenume}}</h4>
                                    {{#unless this.admin}}<h6>Student</h6>
                                    {{else}}<h6>Admin</h6>{{/unless}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">

                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0 text-secondary">Nume</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{this.name}}
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3 text-secondary">
                                    <h6 class="mb-0">Prenume</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{this.prenume}}
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3 text-secondary">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{this.email}}
                                </div>
                            </div>
                            <hr>

                            <div class="row">
                                <div class="col-sm-3 text-secondary">
                                    <h6 class="mb-0">Phone</h6>
                                </div>
                                <div class="col-sm-9">
                                    {{#if this.telefon}}
                                        {{this.telefon}}
                                    {{else}}
                                        Numar de telefon
                                    {{/if}}
                                </div>
                            </div>

                            <hr>

                            {{#unless this.admin}}
                                <div class="row">
                                    <div class="col-sm-3 text-secondary">
                                        <h6 class="mb-0">Grupa</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        {{this.grupa}}
                                    </div>
                                </div>

                                <hr>

                                <div class="row">
                                    <div class="col-sm-3 text-secondary">
                                        <h6 class="mb-0">Facultate</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        {{this.facultate}}
                                    </div>
                                </div>
                            {{/unless}}

                        </div>
                    </div>
                </div>

            {{/each}}
        </div>
    </div>
</div>