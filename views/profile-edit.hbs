<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">

            <div class="unu">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            {{#if user.poza}}
                                <div class="circle-avatar" style="background-image:url(/upload/{{user.poza}})"></div>
                            {{else}}
                                <img src="/public/images/standard-profile-picture.png" alt="pozaprofil"
                                class="rounded-circle" width="150">
                            {{/if}}
                            <div class="mt-3">
                                <h4>{{user.name}} {{user.prenume}}</h4>
                                {{#unless user.admin}}<h6>Student</h6>
                                {{else}}<h6>Admin</h6>{{/unless}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">

                        {{#each rows}}
                            <form method="POST" action="/profileEdit/{{this.email}}">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Nume</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" maxlength="10" name="nume" value="{{this.name}}">
                                    </div>
                                </div>
                                <hr>

                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Prenume</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" maxlength="20" name="prenume" value="{{this.prenume}}">
                                    </div>
                                </div>
                                <hr>

                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Email</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="email" maxlength="100" name="email" value="{{this.email}}">
                                    </div>
                                </div>
                                <hr>

                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Phone</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="text" maxlength="10" name="telefon" value="{{this.telefon}}">
                                    </div>
                                </div>
                                <hr>

                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Password</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="password" maxlength="255" name="password">
                                    </div>
                                </div>
                                <hr>

                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Confirm new password</h6>
                                    </div>
                                    <div class="col-sm-9 text-secondary">
                                        <input type="password" maxlength="10" name="passwordConfirm">
                                    </div>
                                </div>
                                <hr>

                                <div style="text-align:right;">
                                    <button type="submit" class="btn-sm upload-profile-button">Update</button>
                                </div>
                            </form>
                        {{/each}}

                        <br>

                        <div class="row">
                            {{#if alert}}
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    {{alert}}
                                </div>
                            {{/if}}

                            {{#if eroare}}
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    {{eroare}}
                                </div>
                            {{/if}}
                        </div>

                        <hr>

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Upload profile photo</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <form action="/profilePicture" method="POST" enctype="multipart/form-data">
                                    <input type="file" name="poza" accept="image/" style="margin-right: 260px;">
                                    <button type="submit" class="btn-sm upload-profile-button">Upload</button>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-11 profile-buttons" style="text-align: right;">
                {{#if user.admin}}
                    <a class="btn-lg add-admin-buton" href="/registerAdmin/{{user.email}}">Add Admin</a>
                {{/if}}

                <a class="btn-lg buton-edit-profile" href="/profile">Profile</a>

                <a class="btn-lg logout-button" href="/auth/logout">Logout</a>
            </div>

        </div>
    </div>
</div>