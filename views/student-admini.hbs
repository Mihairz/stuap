<section class="grid">

    <div id="text-secretariat">
        <h1>Administratori</h1>
        <br>
        {{#each rows}}
        <div class="facultatea">
            <div class="d-flex flex-column align-items-center text-center">
                <h4>{{#if this.poza}}<div class="circle-avatar" style="background-image:url(/upload/{{this.poza}})"></div>{{/if}}
                    {{this.name}} {{this.prenume}}
                    {{this.email}}
                    {{#if this.telefon}}{{this.telefon}}{{/if}}
                </h4>
            </div>
            <hr>
        </div>
        {{/each}}
    </div>

    <div>
        <img src="/images/logo.svg" id="page-logo" alt="logo">
    </div>

</section>